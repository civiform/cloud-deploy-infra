#! /usr/bin/env bash

# DOC: Run the browser test suite in Docker against the staging environment.
# First argument is expected to be valid image tag.
docker pull civiform/civiform-browser-test:${1}

docker run \
  -e BASE_URL="https://staging-aws.civiform.dev" \
  -e TEST_USER_LOGIN="${TEST_USER_LOGIN}" \
  -e TEST_USER_PASSWORD="${TEST_USER_PASSWORD}" \
  civiform/civiform-browser-test:${1} \
  /bin/bash -c "yarn install && yarn probe"
